# Zigbee2MQTT Environment Configuration
# /etc/default/zigbee2mqtt
#
# Environment variables override configuration.yaml
# Format: ZIGBEE2MQTT_CONFIG_<PATH_IN_UPPERCASE>
# Reference: https://www.zigbee2mqtt.io/guide/configuration/

# MQTT Settings
ZIGBEE2MQTT_CONFIG_MQTT_SERVER=mqtt://localhost:1883
ZIGBEE2MQTT_CONFIG_MQTT_BASE_TOPIC=zigbee2mqtt

# Serial Port (ZBDongle-E default)
ZIGBEE2MQTT_CONFIG_SERIAL_PORT=/dev/ttyUSB0
ZIGBEE2MQTT_CONFIG_SERIAL_ADAPTER=ember

# Frontend Web UI
ZIGBEE2MQTT_CONFIG_FRONTEND_PORT=8080

# Home Assistant Integration (HA Autodiscovery)
ZIGBEE2MQTT_CONFIG_HOMEASSISTANT=true

# Security - disable permit_join by default
ZIGBEE2MQTT_CONFIG_PERMIT_JOIN=false

# Logging
ZIGBEE2MQTT_CONFIG_ADVANCED_LOG_LEVEL=info
